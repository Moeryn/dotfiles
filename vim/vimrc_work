" {{{ Code formatting

set tabstop=3
set softtabstop=3
set textwidth=0
set shiftwidth=3
set shiftround
set expandtab
set textwidth=100


set cindent
set cinoptions =
set cinoptions+=N-s        "No namespace indentation
set cinoptions+=g-1        "No identation of public
set cinoptions+=L0.5s      "Align labels at 0.5 shiftwidth
set cinoptions+=:1s,=1s,l1 "Same for case labels and code following labels
set cinoptions+=u0         "No identation in multiline if
set cinoptions+=(0,W0      "Indent at the (
set cinoptions+=t0         "Indent function return type
set cinoptions+=m1         "Align the closing ) properly

set formatoptions=tcroqnl

" }}}
